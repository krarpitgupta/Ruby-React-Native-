source 'http://rubygems.org'

# BDD framework consist of 3 other gems namely rspec-core, rspec-expectaton, and rspec-mock
gem 'rspec', '~> 3.5.0'

# Part of rspec gem to identify about the expectation
gem 'rspec-expectations', '~> 3.5.0'

# BDD approach using plain language parser called Gherkin, that allows the execution of feature documentation written in business-facing text
gem 'cucumber', '~> 2.4.0'

# A simple way to load the code, littering the code with 'require'
gem 'require_all','~> 1.4.0'

# Gem to report the results of testing to Sauce Labs dashboard
gem 'sauce_whisk', '~> 0.1.0'

# It allows the user to specify task and describe the dependencies a group of tasks in a namespace
gem 'rake', '>= 12.0.0'

# Helper methods for writing cross platform (iOS,Android) test in Ruby using Appium
gem 'appium_lib', '>= 9.6.1'

# Specifying explicitly because of appium not support latest version 3.4.4
gem 'selenium-webdriver', '>= 3.4.0'

# Gem to add touch gestures (swipe, pinch,...)
gem 'touch_action', '~> 1.3.3'

# Gem to allow user to see inside ruby program while it executes
gem 'byebug', '~> 9.0.6'

# Allows user to drive a device (virtual or not) by using the Ruby Appium library API
gem 'appium_console'

# Part of appium component for ruby test
gem 'flaky', '0.1.3'

# Modified minitest for appium
gem 'spec', '5.3.4'

# Uses for hashes, arrays, nested hashes and arrays of hashes and all combinations
gem 'queryparams', '0.0.3'

# Uses for reading the YAML file
gem 'yaml-lint', '0.0.9'

# Reading XPATH or CSS Selector
gem 'nokogiri', '>= 1.6.6'
